{
  "type": "bubble",
  "header": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "設定",
        "margin": "none",
        "color": "#ffffff",
        "weight": "bold",
        "style": "normal",
        "align": "start",
        "size": "lg",
        "contents": []
      }
    ],
    "backgroundColor": "#37718E",
    "borderWidth": "none",
    "cornerRadius": "none",
    "justifyContent": "center",
    "alignItems": "center",
    "borderColor": "#ffffff"
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "[STATUS]",
